<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgroTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_primary</item>
        <item name="colorPrimaryVariant">@color/dark_blue_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_primary</item>
        <item name="colorSecondaryVariant">@color/dark_blue_primary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ArgoTracker.NoActionBar" parent="Theme.AgroTracker">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArgoTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ArgoTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primaryActionButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="secondaryActionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="textTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
</resources>